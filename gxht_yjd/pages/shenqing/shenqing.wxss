/* shenqing.wxss */

page {
  min-height: 100%;
  background-color: #eee;
  position: relative;
}

.contain {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.clear {
  clear: both;
  height: 0;
  overflow: hidden;
}

.clearfix {
  zoom: 1;
  clear: both;
}

.clearfix:after {
  display: block;
  height: 0;
  overflow: hidden;
  content: " ";
  visibility: hidden;
  clear: both;
}

.view-content {
  height: 100%;
  position: relative;
  padding: 0;
  margin: 0;
  -webkit-background-size: cover;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

.view-content image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 1;
  -webkit-background-size: cover;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

.form {
  position: absolute;
  top: 12.5rem;
  left: 0;
  z-index: 2;
  width: 84%;
  margin-left: 8%;
  margin-right: 8%;
}

.viewInput {
  height: 95rpx;
  border: solid #e3e3e3 1px;
  margin-bottom: 0.45rem;
  border-radius: 10rpx;
  background-color: white;
}

.code {
  width: 50%;
  float: left;
  border-radius: 0;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-right: 0;
}

.btnGetCode {
  border-radius: 0;
  height: 98rpx;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
  line-height: 98rpx;
  background-color: white !important;
  border: solid #e3e3e3 1px !important;
  font-size: 1rem !important;
}

.inputCss {
  height: 98rpx;
  font-size: 1rem;
  text-align: left;
  padding: 0 20rpx;
}

.btnSumbit {
  margin-top: 1rem;
}

/* 重置禁用颜色 */

.btnGetCode[type="primary"][plain][disabled] {
  color: #ababab !important;
}
