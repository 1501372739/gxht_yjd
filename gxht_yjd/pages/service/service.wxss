/* service.wxss */

page {
  background-color: white;
}

.home-swiper {
  width: 100%;
  height: 450rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.carSection {
  width: 100%;
  height: 300rpx;
  background-color: white;
  margin-top: 1.25rem;
  position: relative;
}

.carSection .title {
  font-size: 30rpx;
  text-align: left;
  margin-left: 30rpx;
  line-height: 80rpx;
  display: inline-block;
  font-weight: bold;
}

.carSection image {
  width: 100%;
  height: 300rpx;
  display: block;
  overflow: hidden;
  margin: 0 auto;
}

.carSection .btnDetail {
  font-size: 26rpx;
  border: solid white 1px;
  display: block;
  padding: 10rpx 20rpx;
  width: 120rpx;
  position: absolute;
  bottom: 30rpx;
  left: 39%;
  color: white;
  border-radius: 10rpx;
  z-index: 2;
  text-align: center;
}

.carSection .btndetail2 {
  font-size: 26rpx;
  border: solid #ffab52 1px;
  display: block;
  padding: 10rpx 20rpx;
  width: 120rpx;
  position: absolute;
  bottom: 30rpx;
  left: 39%;
  color: #ffab52;
  border-radius: 10rpx;
  z-index: 2;
  text-align: center;
}

.headImg {
  width: 100%;
  height: 320rpx;
}

.headImg image {
  width: 100%;
  height: 320rpx;
}
